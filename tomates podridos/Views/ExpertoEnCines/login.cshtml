
@{
    ViewData["Title"] = "login";

    Layout = null;
}

<html>
<head>
    <title>login experto en cine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tomates_podridos.styles.css" asp-append-version="true" />
</head>
<body>

    <h4> inicio sesion </h4>
    <hr />
    <div class="contenedor" align="center">
        <div class="col-md-4">
            <div class="col-md-4">
                <form method="post">

                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" name="name" id="txtName" /><br />
                    </div>

                    <div class="form-group">
                        <label> Contraseña</label> 
                        <input type="text" name="password" id="txtpassword" /><br />
                    </div>
                    
                    <div class="form-group">
                        <button type="submit">Enviar información</button>
                    </div>
                </form>
            </div>
            <div>
                <a asp-controller="Home" asp-action="Index">volver al inicio</a>
                <input type="button" value="registrarse" onclick="location.href='@Url.Action("Create", "ExpertoEnCines")'" />
            </div>
        </div>
        

       
        <h2 class="text-center">
            @ViewBag.mensaje
        </h2>
    </div>


    
</body>
</html>

