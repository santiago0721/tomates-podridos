
@{
    ViewData["Title"] = "menu";
    var lista_peliculas = ViewBag.peliculas;
}

<h1>menu</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                nombre
            </th>
            <th>
                img
            </th>
            <th>
                calCritica
            </th>
            <th>
                calAudiencia
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in lista_peliculas)
        {
            <tr>
                <td>
                    @item.nombre
                </td>
                <td>
                    <img src=@item.img width="100" height="120">

                </td>
                <td>
                    @item.calCritica
                </td>
                <td>
                    @item.calAudiencia
                </td>

                <td>
                    <a asp-controller="peliculas" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
