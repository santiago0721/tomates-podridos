                <td>
                    @item.calAudiencia
                </td>

                
                <td style="visibility:collapse; display:none;">
                    @ViewBag.self.mandar_genero(item.Id)
                </td>

                <td>
                    <a asp-controller="peliculas" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }

        @foreach (var item in lista_shows)
        {
