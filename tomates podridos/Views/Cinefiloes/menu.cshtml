                </td>
                <td>
                    @item.calAudiencia
                </td>


                <td style="visibility:collapse; display:none;">
                    @item.genero
                </td>

                <td>
                    <a asp-controller="Shows" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>




